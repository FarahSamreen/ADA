#include <stdio.h>

void bfs(int size, int adjacency[100][100], int current_node, int visited_nodes[]) {
    visited_nodes[current_node] = 1;
    for (int i = 0; i < size; i++) {
        if (adjacency[current_node][i] == 1 && visited_nodes[i] != 1) {
            bfs(size, adjacency, i, visited_nodes);
        }
    }
}

int main() {
    
    int size;
    int i;
    printf("Enter number of nodes: ");
    scanf("%d", &size);
    
    int adjacency[100][100];
    printf("Enter the adjacency matrix: ");
    for (i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            scanf("%d", &adjacency[i][j]);
        }
    }
    
    int start;
    printf("Enter starting position: ");
    scanf("%d", &start);
    
    int visited_nodes[100];
    bfs(size, adjacency, start-1, visited_nodes);
    
    printf("Nodes visitable from %d:", start);
    for (i = 0; i < size; i++) {
        if (visited_nodes[i] == 1) {
            printf(" %d", i+1);
        }
    }
    if(i+1!=size){
        printf("Not connected");
    }
    else{
        printf("connected");
    }
    printf("\n");
    
    return 0;
}
